<% if(error){%>
<div class="alert alert-success alert-dismissible wow slideInRight">
   <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
   <strong>Failed!</strong> You are failed to create an account! <%=error.message%>
</div>
<%} else if(!error && messages){%>
<div class="alert alert-success alert-dismissible wow slideInRight">
   <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
   <strong>Success!</strong> Your account has been successfully created! <%=error.message%>
</div>
<%}%>
 <div class="login-wrapper">
    <div class="row row-sign">
       <div class="col-sm-5 col-sign text-side-signup">
          <div class="contact-info wow fadeIn">
             <img src="/images/signup.png" class="user-image" width="100" height="100" alt="A man picture">
             <h1 class="heading1 wow fadeIn data-wow-duration="1s" data-wow-delay="0.8s">Connect with us</h1>
             <p>To keep connected with us enter your information</p>
          </div>
       </div>
       <div class="col-sm-7 col-sign">
          <section class="form-side wow slideInRight">
             <h2 class="heading2 text-center">Create your account!</h2>
             <form id="signin-form" action="/user/" role="form" method="POST">
                <div class="row">
                   <div class="col-md-6">
                      <div class="form-group fields">
                         <label class="form-label">Name</label>
                         <input type="text" name="name" id="name" class="form-control" placeholder="Enter your name" required>
                      </div>
                      <div class="form-group fields">
                         <label class="form-label">Email</label>
                         <input type="email" name="email" id="email" class="form-control" placeholder="Enter your email" required>
                      </div>
                      <div class="form-group fields">
                         <label class="form-label">Phone</label>
                         <input type="text" name="phone_no" id="phone_no" class="form-control"  placeholder="Enter your phone no" required>
                      </div>
                      <div class="form-group fields">
                         <label class="form-label">Gender</label>
                         <div class="select-opt">
                            <select class="form-control" id="gender" name="gender" required>
                              
                               <option value="" disabled selected hidden>Select Gender</option>
                               <option value="Male">Male</option>
                               <option value="Female">Female</option>
                               <option value="Other">Other</option>

                            </select>
                            <!-- <img src="/images/select.png" height="20" width="20" alt="Down arrow" class="select-arrow"> -->
                         </div>
                      </div>
                      <div class="form-group fields">
                        <label class="form-label">Password</label>
                        <input type="password" name="password" id="password" class="form-control" placeholder="Enter your password" required>
                     </div>
                     <div class="form-group fields">
                        <label class="form-label"> Confirm Password</label>
                        <input type="password" name="Cpassword" id="Cpassword" class="form-control" placeholder="Enter your password again" required>
                     </div>
                     <div class="login-btn">
                        <button class="btn buttn" type="submit">Signup</button>
                     </div>
                   </div>
                 
                   </div>
                </div>
               
             </form>
          </section>
       </div>
    </div>
 </div>
 <script src="/js/wow.js"></script>
 <script src="/js/jquery-1.12.4.js"></script>
 <script src="/js/jquery.min.js"></script>
 <script src="/js/bootstrap.min.js"></script>
 <script src="/js/jquery-ui.js"></script>
 <script>
   var password = document.getElementById("password")
      , confirm_password = document.getElementById("Cpassword");

   function validatePassword() {
      if (password.value != confirm_password.value) {
         confirm_password.setCustomValidity("Passwords Don't Match");
      } else {
         confirm_password.setCustomValidity('');
      }
   }

   password.onchange = validatePassword;
   confirm_password.onkeyup = validatePassword;

   $(function () {
      $("#datepicker").datepicker();
   });

   new WOW().init();
</script>